{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "target": "es2016",
    "jsx": "react",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "root/*": [
        "src/*"
      ],
      "images/*": [
        "public/images/*"
      ],
      "fonts/*": [
        "public/fonts/*"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "./@types/*.d.ts"
  ]
}